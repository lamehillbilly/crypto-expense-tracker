datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Entry {
  id             Int      @id @default(autoincrement())
  type           String
  amount         Float
  date           DateTime
  txn            String?
  expenseDetails Json?
  claimDetails   Json?
  purchaseAmount Float    @default(0)
  purchaseDate   DateTime @default(now())
  status         String   @default("open")
}

model Trade {
  id            Int           @id @default(autoincrement())
  tokenId       String
  tokenSymbol   String
  tokenName     String
  tokenImage    String?
  marketCapRank Int?
  purchasePrice Float
  quantity      Float
  currentPrice  Float?
  purchaseDate  DateTime
  closeDate     DateTime?
  closePrice    Float?
  status        String        @default("open")
  unrealizedPnl Float?
  realizedPnl   Float         @default(0)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  tradeHistory  TradeHistory[]

  @@index([status])
  @@index([tokenId])
}

model TradeHistory {
  id        Int      @id @default(autoincrement())
  tradeId   Int
  date      DateTime
  amount    Float
  price     Float
  type      String   // 'close' or 'partial_close'
  pnl       Float
  trade     Trade    @relation(fields: [tradeId], references: [id])
  createdAt DateTime @default(now())

  @@index([tradeId])
  @@index([date])
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}

model Claim {
  id           String        @id @default(cuid())
  date         DateTime
  taxAmount    Float?
  txn          String?
  tokenAmounts TokenAmount[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([date])
}

model TokenAmount {
  id      String @id @default(cuid())
  token   String
  amount  Float
  claim   Claim  @relation(fields: [claimId], references: [id], onDelete: Cascade)
  claimId String

  @@index([claimId])
  @@index([token])
}

model PnlRecord {
  id          Int      @id @default(autoincrement())
  date        DateTime
  tokenSymbol String
  amount      Float
  taxEstimate Float
  tradeId     Int
  createdAt   DateTime @default(now())

  @@index([date])
  @@index([tokenSymbol])
}